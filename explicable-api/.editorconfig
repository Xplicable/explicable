# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.sh]
indent_size = 2

[*.md]
trim_trailing_whitespace = false  # Don't remove whitespace in markdown

[*.yml]
indent_size = 2

[*.json]
indent_size = 2

[*.js]
indent_size = 2

[*.env]
end_of_line = lf
