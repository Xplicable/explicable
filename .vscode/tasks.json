{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Frontend (React)",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/explicable-ui"
      },
      "group": "build"
    },
    {
      "label": "Start Backend (Lambda via serverless)",
      "type": "shell",
      "command": "npx serverless offline",
      "options": {
        "cwd": "${workspaceFolder}/explicable-api"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Delete Cognito User (by email)",
      "type": "shell",
      "command": "node scripts/delete-user-by-email.mjs",
      "args": [
        "${input:userEmail}"
      ],
      "options": {
        "cwd": "${workspaceFolder}/explicable-api"
      },
      "problemMatcher": [],
      "detail": "Deletes a Cognito user by email address"
    }
  ],
  "inputs": [
    {
      "id": "userEmail",
      "type": "promptString",
      "description": "Enter the email address of the Cognito user to delete",
      "default": "user@example.com"
    }
  ]
}
